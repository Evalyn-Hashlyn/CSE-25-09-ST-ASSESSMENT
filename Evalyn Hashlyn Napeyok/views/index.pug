doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Upload Your Music â€” Streaming App
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/styles.css")

  body
    main.layout
      aside.form-card
        h1 Upload your music
        form#songForm(enctype="multipart/form-data" novalidate)
          .cover-wrap
            label.cover-label(for="coverInput")
              #coverPreview.cover-preview
                span.cover-text Cover Photo
            input#coverInput(type="file" name="cover" placeholder="Cover Photo" accept="image/*" hidden)
            small#coverError.error

          .fields
            input#title(type="text" name="title" placeholder="Song title")
            small#titleError.error

            input#artist(type="text" name="artist" placeholder="Artist")
            small#artistError.error

            input#album(type="text" name="album" placeholder="Album")
            small#albumError.error

            input#year(type="number" name="year" min="1888" max="2100" placeholder="Year of release")
            small#yearError.error

            input#audio(type="file" name="audio" accept="audio/*" placeholder="Upload audio file")
            small#audioError.error

            button#submitBtn(type="submit") UPLOAD
            #notification.notification.hidden
      section.gallery
        #songsList.songs-list
    script(src="/js/form.js")
